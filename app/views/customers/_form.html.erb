<%= form_with(model: customer) do |form| %> 
  <% if customer.error.any? %>
	  <div style="color: red">
		  <h2><%= pluralize(customer.errors.count, "error") %> Can't saved due to error: </h2>
			  <ul>
				<% customer.errors.each.do |error| %>
				  <li><%=  error.full_message %></li>
				<% end %>
				</ul>
		</div>
	<% end %>
	<div>
	  <%= form.label :first_name, style: "display: block" %>
		<%= form.text_field :fname %>
	</div>

	<div>
	  <%= form.label :last_name, style: "display: block" %>
		<%= form.text_field :lname %>
	</div>

	<div>
	  <%= form.label :email, style: "display: block" %>
		<%= form.text_feild :email %>
	</div>

	<div>
    <%= form.label :phone_number, style: "display-block" %>
		<%= form.number_field :phone_number %>
	</div>

  <div>
	  <%= form.submit %>
	</div>

<% end %>
