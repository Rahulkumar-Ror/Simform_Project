<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  <title> New Employee Detail </title>
</head>


<div class="center">
  <%= form_with model: @employee do |form| %>
<div>
  <%= form.hidden_field :lock_version %>
  <% @employee.errors.full_messages_for(:lock_version).each do |message| %>
<div><%= message %></div>
<% end %>
</div>
<br>
<br>
<div>
  <%= form.label :First_name %><br>
  <%= form.text_field :first_name %>
  <% @employee.errors.full_messages_for(:first_name).each do |message| %>
<div><%= message %></div>
<% end %>
</div>

<div>
  <%= form.label :Last_name %><br>
  <%= form.text_field :last_name %>
  <% @employee.errors.full_messages_for(:last_name).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :Email %><br>
  <%= form.email_field :email %>
  <% @employee.errors.full_messages_for(:email).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :Age %><br>
  <%= form.number_field :age %>
</div>

<div>
  <%= form.label :No_of_order %><br>
  <%= form.number_field :no_of_order %>
</div>

<div>
  <%= form.label :Full_time_available %>
  <%= form.check_box :full_time_available %>
</div>
<br>
<div>
  <%= form.label :Salary %><br>
  <%= form.number_field :salary %>
  <% @employee.errors.full_messages_for(:salary).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>
<div>
  <%= form.submit %>
</div>
  <% end %>
</div>
