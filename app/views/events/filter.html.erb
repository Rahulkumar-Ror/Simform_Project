<div class="col-lg-12 mx-lg-auto p-5">
<div class="card shadow">
<div class="card-body p-5 ">
<center>
<h1>Choose event by their category</h1>
<div  class="form-group text-center mb-2 mt-3 ">
<%= form_tag(filter_events_path, :method => "get") do %>
  <%= label_tag(:q, "Choose Your Category:") %>
  <%= collection_select(:q, :category_id, Category.all, :id, :category) %><br/>
  <%= submit_tag("Show") %>
<% end %>
</div>
<% if (@events != nil) %>
<table >
  <tr>
   <th scope="col">Event name</th>
    <th scope="col">Event Description</th>
    <th scope="col">Event Date</th>
    <th scope="col">Event Category</th>
  </tr>
   <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td><%= event.event_date %></td>
      <td><%= event.category.category %></td>
    </tr>
  <% end %>
</table>
<% end %>
</center>
