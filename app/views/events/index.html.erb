 
<h1 class="text-center mt-4">Event Listing</h1>

<center>
    <div>
        <table> 
            <th>Event Name</th>
            <th>Created User's Username</th>
            <th colspan=3>Actions</th>
            <% @events.each do |event| %>
            <tr>
                <td><%= event.name %></td>
                <td><%= event.username if event.user %></td>
                <td><%= button_to "Show",event_path(event),method: :get, class: "btn btn-outline-info"  %></td>
                <td><%= button_to "Edit",edit_event_path(event),method: :get, class: "btn btn-outline-success" %></td>
                <td><%= button_to "Delete",event_path(event),method: :delete,  class: "btn btn-outline-danger"  %></td>
            </tr>
            <% end %>
        </table>
    </div>
</center>

<center>
<div class="new">
    <%= link_to "New Event", new_event_path, method: :get,  class: "btn btn-primary btn-sm  mb-3" %>
</div>
</center>

<center>
<div>
    <%= link_to "Logout", root_path, method: :delete %>
</div>
</center>