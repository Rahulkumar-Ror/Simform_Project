<center>
  <h1>Listing of product</h1>
  <table>
    <th>Title</th>
    <th colspan='3'>Actions</th>
    <% @products.each do |product| %>
			<tr>
				<td><%= product.title %></td>
				<td><%= button_to "Show", product_path(product), method: :get %></td>
				<td><%= button_to "Edit", edit_product_path(product), method: :get %></td>
				<td><%= button_to "Remove", product_path(product), method: :get %></td>
			</tr>
  	<% end %>
  </table>
</center>
<center>
  <div>
	  <%= link_to "new product", new_product_path, method: :get %>
	</div>
</center>
