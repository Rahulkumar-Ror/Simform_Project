<div class="col-lg-12 mx-lg-auto p-5">
<div class="card shadow">
<div class="card-body p-5 ">



<center><thead>
  <div class="form-group text-center mb-2 mt-3 ">
	 <b><%= link_to "List of all registered user", users_path %></b>
	</div></thead>
</center>

<center>

<div>
  <%= form_tag root_pages_index_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "search by Category name" %>
  <%= submit_tag 'search' %>
  <% end %>
</div>

</center>

<center>
  <h2 class= "alert alert-primary mb-3 mt-3"> Event List </h2>
	<table class="table" >
    <thead>
    <tr>
	  <th class="alert alert-danger">Event Name</th>
		<th class="alert alert-danger">Event Description</th>
		<th class="alert alert-danger">Event Date</th>
		<th class="alert alert-danger">Event Category</th>
		<th class="alert alert-danger">Created By</th>
    </tr>
    </thead>
		<% @events.each do |event| %>
		<tr>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.event_date %></td>
          <td><%= event.category.category %></td>
          <td><%= event.user.username if event.user %></td>
        </tr>
		<% end %>
	</table>
</center>
	
