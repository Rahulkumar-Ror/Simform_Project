<h1 class="text-center mt-4">User Listing</h1>
  <center>
  <% if flash.key? :notice %>
    <p><%= flash[:notice] %></p>
  <% end %>
  </center>
<center>
    <div class="col-8 mt-4">
        <table> 
            <th>User Name</th>
            <th colspan=3>Actions</th>
            <% @users.each do |user| %>

            <tr>
                <td><%= user.username %></td>
                <td><%= button_to "Show",user_path(user),method: :get,  class: "btn btn-outline-info"  %></td>
                <td><%= button_to "Edit",edit_user_path(user),method: :get, class: "btn btn-outline-success" %></td>
                <td><%= button_to "Delete",user_path(user),method: :delete, class: "btn btn-outline-danger" %></td>
            </tr>
            <% end %>
        </table>
    </div>
</center>
<center>
<div class="new">
    <%= link_to "New User", new_user_path, method: :get,  class: "btn btn-primary btn-sm  mb-3" %>
</div>
</center>